apiVersion: apps/v1
kind: Deployment
metadata:
  name: my-deployment
spec:
  replicas: 2
  selector:
    matchLabels:
      app: nginx
      type: frontend
  template:
    metadata:
      name: my-first-pods
      labels:
        app: nginx
        type: frontend
    spec:
      volumes:
        - name: nginx-conf
          configMap:
            name: db-configmap
      containers:
      - name: nginx-app
        image: nginx:1.23.4
        env:
          - name: application
            value: front-end-app
          - name: dbname
            valueFrom: 
              secretKeyRef:
                name: db-configmap          
                key: databasename
        resources:
          requests:
            cpu: "250m"
            memory: "64Mi"
          limits:
            cpu: "500m"
            memory: "128Mi"
        volumeMounts:
          - mountPath: /opt/
            name: nginx-conf
